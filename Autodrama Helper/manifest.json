{

  "description": "Helper for Autodrama. Crawls through the sites and grabs the download links.",
  "manifest_version": 2,
  "name": "Autodrama Helper",
  "version": "0.1",
  "developer": {
    "name": "Baconfry",
    "url": "https://github.com/Baconfry"
  },
  "homepage_url": "https://github.com/Baconfry/autodrama",
  "icons": {
    "48": "icons/helper-48.png"
  },

  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://kissasian.li/*"],
      "run_at": "document_end",
      "js": ["lib/jquery.js", "lib/savetodisk.js", "login.js"]
    },
    {
      "matches": ["*://kissasian.li/Drama/*/Episode-*?id=*", "*://kissasian.li/Drama/*/Movie?*"],
      "run_at": "document_idle",
      "js": ["redirector.js"]
    },
    {
      "matches": ["*://www.gaobook.review/*"],
      "run_at": "document_idle",
      "js": ["lib/jquery.js", "lib/savetodisk.js", "link_catcher.js"]
    }
  ]
}
